{
  "name": "aip-recruiter",
  "version": "1.0.0",
  "description": "AI-Powered Recruitment Management Application",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd talent-ai-recruitment && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd talent-ai-recruitment && npm run preview",
    "install:all": "npm install && cd backend && npm install && cd ../talent-ai-recruitment && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
